
<div class="container">
  
  {{#each result}}
  <div class="well">
      <div class="media">
      
  		<div class="media-body">
    		<h4 class="media-heading">{{titulo}}</h4>
        
          {{!-- <p class="text-right">By Francisco</p> --}}
          <p>{{contenido}}</p>
          <ul class="list-inline list-unstyled">
  			<li><span><i class="glyphicon glyphicon-calendar"></i> {{createdAt}} </span></li>
            {{!-- <li>|</li>
            <span><i class="glyphicon glyphicon-comment"></i> 2 comments</span>
            <li>|</li> --}}
            {{!-- <li>
               <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
            </li> --}}
            <li>|</li>
            <li>
            <!-- Use Font Awesome http://fortawesome.github.io/Font-Awesome/ -->
              <span><i class="fa fa-facebook-square"></i></span>
              <span><i class="fa fa-twitter-square"></i></span>
              <span><i class="fa fa-google-plus-square"></i></span>
            </li>
			</ul>
       </div>
    </div>
    <a type="submit" href="/noticias/eliminarNews/{{_id}}"  class="btn btn-danger" >Eliminar</a>
                          <a type="submit" href="/noticias/editNews/{{_id}}"  class="btn btn-primary" data-toggle="modal" data-target="#modificar{{_id}}" >Modificar</a>
                          <!-- Modal -->
                          <div class="modal fade" id="modificar{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                  <form action="/noticias/editNews/{{_id}}" method="post">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="exampleModalLabel">Modificar Usuario</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                      <div class="form-group">
                                          <input type="text" class="form-control" value="{{titulo}}" name="titulo" id="" placeholder="Nombres">
                                      </div>
                                     <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Descripcion ...</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" name="contenido" rows="10">{{contenido}}</textarea>
                        </div>
                                      
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-primary">Actualizar</button>
                                </div>
                                </form>    
                              </div>
                            </div>
                          </div>
  </div>

  

  {{/each}}
