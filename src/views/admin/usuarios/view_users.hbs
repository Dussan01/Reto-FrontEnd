                          <!-- Modal -->
                          <div class="modal fade" id="modificar{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                  <form action="/admin/user/modificar/{{_id}}" method="post">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="exampleModalLabel">Modificar Usuario</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                      <div class="form-group">
                                          <input type="text" class="form-control" value="{{nombres}}" name="nombres" id="" placeholder="Nombres">
                                      </div>
                                      <div class="form-group">
                                          <input type="text" class="form-control" value="{{apellidos}}" name="apellidos" id="" placeholder="Apellidos">
                                      </div>
                                      <div class="form-group">
                                          <input type="text" class="form-control" value="{{telefono}}" name="telefono" id="" placeholder="Telefono">
                                      </div>
                                      
                                      
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-primary">Actualizar</button>
                                </div>
                                </form>    
                              </div>
                            </div>
                          </div>

                        </td>
                      </tr>
                       {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
               
            </div>
          </div>
         
